<h1>Subscriptions</h1>

<div id="filter_params" style="border-top: 1px black solid; background-color: #FFE5C0;">
  <% form_tag({}, {:method => "get", :class => "filterbar"}) do  %>
      <table style="width: 100%">
        <tr>
          <td style="width: 25%;">
            <div style="position: relative;">
              <label for="filter_person" class="overlabel">Owner</label>
              <%= text_field_tag "person", params[:person], {:id => "filter_person"} %>
            </div>
          </td>
          <td style="width: 25%;">
            <div style="position: relative;">
              <%= select_tag "subscription_plan_id", options_for_select(
                    [['', nil]] + SubscriptionPlan.all.collect { |p| [p.name, p.id] }, params[:subscription_plan_id]) %>
            </div>
          </td>
          <td style="text-align: right;">&nbsp;<%= submit_tag "Filter" %></td>
        </tr>
      </table>
  <% end %>
</div>

<%= render :partial => "paged_results" %>
